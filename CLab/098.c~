#include "head.h"

void tosuper(char *a)
{
  int i = 0;
  while (*(a + i) != '\0')
  {
    if (*(a + i) > 'a' && *(a + i) < 'z')
    {
      *(a + i) = *(a + i) - 32;
    }
    i++;
  }
}

void putfile(FILE *fp, char *a)
{
  int i = 0;
  while (*(a + i) != '\n')
  {
    fputc(*(a + i), fp);
  }
}

void main()
{
  char str[100];
  FILE *fp;
  fp = fopen("test", "w");
  if (fp == NULL)
  {
    printf("Can't open the file\n");
    return;
  }
  printf("Please input a string:\n");
  gets(str);
  tosuper(str);
  putfile(fp, str);
  fclose(fp);
}
